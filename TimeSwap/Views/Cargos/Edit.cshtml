@model TimeSwap.Models.CARGO

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Editar Cargo
        <small>Editar cargo @Model.CARGO1</small>
    </h1>
</section>
<section class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="box box-primary">
            <div class="box-body">
                @Html.Label("Cargo")
                @Html.TextBoxFor(model => model.CARGO1, "", new { @Class = "form-control" })
            </div>
            <div class="box-footer">
                <input type="submit" class="btn btn-primary pull-left" value="Editar" />
                <div>
                    @Html.ActionLink("Voltar", "Index", "Cargos", null, new { @class = "btn btn-default" })
                </div>

            </div>
        </div>
    }
</section>


